# AgentNexus Frontend Environment Variables

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# Base L2 RPC URLs (Primary Chain)
NEXT_PUBLIC_BASE_RPC=https://mainnet.base.org
NEXT_PUBLIC_BASE_SEPOLIA_RPC=https://sepolia.base.org

# Multi-Chain RPC URLs (add your provider URLs)
NEXT_PUBLIC_ARBITRUM_RPC=https://arb1.arbitrum.io/rpc
NEXT_PUBLIC_POLYGON_RPC=https://polygon-rpc.com
NEXT_PUBLIC_OPTIMISM_RPC=https://mainnet.optimism.io
NEXT_PUBLIC_BSC_RPC=https://bsc-dataseed.binance.org
NEXT_PUBLIC_AVALANCHE_RPC=https://api.avax.network/ext/bc/C/rpc

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Solana Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Contract Addresses (deployed contracts - update per chain)
NEXT_PUBLIC_ESCROW_CONTRACT=0x...
NEXT_PUBLIC_ENTITLEMENTS_CONTRACT=0x...
NEXT_PUBLIC_AGENT_REGISTRY_CONTRACT=0x...

# Default chain ID (optional, defaults to Base Sepolia in dev, Base in prod)
# NEXT_PUBLIC_DEFAULT_CHAIN_ID=84532

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
